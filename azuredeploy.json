{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "serverLocation": {
      "type": "string",
      "allowedValues": [
        "East US",
        "West US",
        "Central US",
        "South Central US",
        "East US 2",
        "North Europe",
        "West Europe",
        "Southeast Asia",
        "East Asia",
        "Japan West",
        "Japan East"
      ],
      "defaultValue": "West US",
      "metadata": {
        "description": "Azure region where application gateway will be deployed"
      }
    },
    "sqlAdministratorLogin": {
      "type": "string",
      "metadata": {
        "description": "The database admin username that you wish to create."
      }
    },
    "dbAdminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Password for database admin user that you wish to use."
      }
    },
    "sqlServerName": {
      "type": "string",
      "metadata": {
        "description": "The name of the SQL database server that you wish to create."
      }
    },
    "dbName": {
      "type": "string",
      "metadata": {
        "description": "The name of the database that you wish to create."
      }
    },
    "storageAccountName": {
      "type": "string",
      "metadata": {
        "description": "The name of the storage account that you wish to create."
      }
    },
    "storageAccountType": {
      "type": "string",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ],
      "defaultValue": "Standard_GRS",
      "metadata": {
        "description": "The type of the storage account app that you wish to create."
      }
    },
    "storageContainerName": {
      "type": "string",
      "defaultValue": "images",
      "metadata": {
        "description": "The name of storage container that you wish to use."
      }
    },
    "hostingPlanName": {
      "type": "string",
      "metadata": {
        "description": "The hosting service plan name that you wish to create."
      }
    },
    "sku": {
      "type": "string",
      "allowedValues": [
        "Free",
        "Shared",
        "Basic",
        "Standard"
      ],
      "defaultValue": "Free",
      "metadata": {
        "description": "The pricing tier for the hosting plan."
      }
    },
    "siteName": {
      "type": "string",
      "metadata": {
        "description": "The name of the web client app that you wish to create."
      }
    },
    "ResizeQueueName": {
      "type": "string",
      "defaultValue": "resizerequest",
      "metadata": {
        "description": "The name of 'resize' queue that you wish to use."
      }
    },
    "DefaultUserId": {
      "type": "string",
      "defaultValue": "11111111-1111-1111-1111-111111111111",
      "metadata": {
        "description": "The default userId that you wish to use for unauthenticated users."
      }
    },
    "DefaultAlbumId": {
      "type": "string",
      "defaultValue": "11111111-1111-1111-1111-111111111111",
      "metadata": {
        "description": "The default albumId that you wish to use for unauthenticated users."
      }
    },
    "FacebookAuthString": {
      "type": "string",
      "metadata": {
        "description": "{OBSOLETE}Use any valid URL here."
      }
    },
    "PackagesBaseURL": {
      "type": "string",
      "metadata": {
        "description": "Base location for deployment packages (must NOT include trailing '/')."
      }
    },
    "DeploymentVersion": {
      "type": "string",
      "metadata": {
        "description": "Current deployment version -- string of type {VERSION}, ex. 0.1, 1.2, etc."
      }
    }
  },
  "variables": {
    "webApiName": "[concat(parameters('siteName'), '-api')]",
    "webJobSiteName": "[concat(parameters('siteName'), '-jobs')]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[parameters('storageAccountName')]",
      "apiVersion": "2015-05-01-preview",
      "location": "[parameters('serverLocation')]",
      "properties": {
        "accountType": "[parameters('storageAccountType')]"
      }
    },

    {
      "apiVersion": "2014-04-01-preview",
      "name": "[parameters('sqlServerName')]",
      "type": "Microsoft.Sql/servers",
      "location": "[parameters('serverLocation')]",
      "properties": {
        "administratorLogin": "[parameters('sqlAdministratorLogin')]",
        "administratorLoginPassword": "[parameters('dbAdminPassword')]"
      },
      "resources": [
        {
          "apiVersion": "2014-04-01-preview",
          "name": "[parameters('dbName')]",
          "type": "databases",
          "location": "[parameters('serverLocation')]",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers/', parameters('sqlServerName'))]"
          ],
          "properties": {
            "edition": "Basic",
            "maxSizeBytes": "2147483648"
          }
        }
      ]
    },

    {
      "apiVersion": "2014-06-01",
      "type": "Microsoft.Web/serverfarms",
      "name": "[parameters('hostingPlanName')]",
      "location": "[parameters('serverLocation')]",
      "properties": {
        "name": "[parameters('hostingPlanName')]",
        "sku": "[parameters('sku')]"
      }
    },

    {
      "apiVersion": "2014-04-01",
      "type": "Microsoft.Web/sites",
      "name": "[parameters('webApiName')]",
      "location": "[parameters('serverLocation')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverFarms/', parameters('hostingPlanName'))]",
        "[resourceId('Microsoft.Sql/servers/', parameters('sqlServerName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts/', parameters('storageAccountName'))]"
      ],
      "properties": {
        "name": "[parameters('webApiName')]",
        "serverFarm": "[parameters('hostingPlanName')]"
      },
      "resources": [
        {
          "apiVersion": "2014-04-01",
          "type": "config",
          "name": "web",
          "dependsOn": [
            "[concat('Microsoft.Web/sites/', parameters('webApiName'))]"
          ],
          "properties": {
            "connectionStrings": [
              {
                "ConnectionString": "[concat('Server=tcp:', reference(concat('Microsoft.Sql/servers/', parameters('sqlServerName'))).fullyQualifiedDomainName, ',1433;Database=', parameters('dbName'), ';User Id=', parameters('sqlAdministratorLogin'), '@', parameters('sqlServerName'), ';Password=', parameters('dbAdminPassword'), ';')]",
                "Name": "MS_TableConnectionString",
                "Type": 2
              }
            ]
          }
        },
        {
          "apiVersion": "2015-08-01",
          "type": "config",
          "name": "appsettings",
          "dependsOn": [
            "[concat('Microsoft.Web/sites/', parameters('webApiName'))]"
          ],
          "properties": {
            "StorageAccountName": "[parameters('storageAccountName')]",
            "StorageAccountKey": "[concat('',listKeys(resourceId('Microsoft.Storage/storageAccounts/', parameters('storageAccountName')), '2015-05-01-preview').key1)]",
            "UploadSasDaysTime": "5",
            "ResizeQueueName": "[parameters('ResizeQueueName')]",
            "UploadContainerName": "[parameters('storageContainerName')]",
            "FacebookAuthString": "[parameters('FacebookAuthString')]",
            "DefaultUserId": "[parameters('DefaultUserId')]",
            "DefaultAlbumId": "[parameters('DefaultAlbumId')]",
            "DefaultServiceURL": "[concat('http://', parameters('webApiName'), '.azurewebsites.net')]"
          }
        },
        {
          "apiVersion": "2015-08-01",
          "name": "MSDeploy",
          "type": "extensions",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites/', parameters('webApiName'))]"
          ],
          "properties": {
            "connectionString": "",
            "dbType": "None",
            "packageUri": "[concat(parameters('PackagesBaseURL'), '/ContosoMoments.MobileServer.v', parameters('DeploymentVersion') ,'.zip')]",
            "setParameters": { }
          }
        }
      ]
    },

    {
      "apiVersion": "2014-04-01",
      "type": "Microsoft.Web/sites",
      "name": "[parameters('siteName')]",
      "location": "[parameters('serverLocation')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverFarms/', parameters('hostingPlanName'))]",
        "[resourceId('Microsoft.Web/Sites/', variables('webApiName'))]"
      ],
      "properties": {
        "name": "[parameters('siteName')]",
        "serverFarm": "[parameters('hostingPlanName')]"
      },
      "resources": [
        {
          "apiVersion": "2014-04-01",
          "type": "config",
          "name": "web",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites/', parameters('siteName'))]"
          ],
          "properties": {
            "connectionStrings": [
              {
                "ConnectionString": "[concat('Server=tcp:', reference(concat('Microsoft.Sql/servers/', parameters('sqlServerName'))).fullyQualifiedDomainName, ',1433;Database=', parameters('dbName'), ';User Id=', parameters('sqlAdministratorLogin'), '@', parameters('sqlServerName'), ';Password=', parameters('dbAdminPassword'), ';')]",
                "Name": "DefaultConnection",
                "Type": 2
              }
            ]
          }
        },
        {
          "apiVersion": "2015-08-01",
          "type": "config",
          "name": "appsettings",
          "dependsOn": [
            "[concat('Microsoft.Web/sites/', parameters('siteName'))]"
          ],
          "properties": {
            "DefaultUserId": "[parameters('DefaultUserId')]",
            "DefaultAlbumId": "[parameters('DefaultAlbumId')]",
            "DefaultServiceURL": "[concat('http://', variables('webApiName'), '.azurewebsites.net')]"
          }
        },
        {
          "apiVersion": "2015-08-01",
          "name": "MSDeploy",
          "type": "extensions",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites/', parameters('siteName'))]"
          ],
          "properties": {
            "connectionString": "",
            "dbType": "None",
            "packageUri": "[concat(parameters('PackagesBaseURL'), '/ContosoMoments.Web.v', parameters('DeploymentVersion') ,'.zip')]",
            "setParameters": { }
          }
        }
      ]
    },

    {
      "apiVersion": "2014-04-01",
      "type": "Microsoft.Web/sites",
      "name": "[variables('webJobSiteName')]",
      "location": "[parameters('serverLocation')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverFarms/', parameters('hostingPlanName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts/', parameters('storageAccountName'))]"
      ],
      "properties": {
        "name": "[parameters('webJobSiteName')]",
        "serverFarm": "[parameters('hostingPlanName')]"
      },
      "resources": [
        {
          "apiVersion": "2015-08-01",
          "type": "config",
          "name": "appsettings",
          "dependsOn": [
            "[concat('Microsoft.Web/sites/', variables('webJobSiteName'))]"
          ],
          "properties": {
            "AzureWebJobsDashboard": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('storageAccountName'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts/', parameters('storageAccountName')), '2015-05-01-preview').key1)]",
            "AzureWebJobsStorage": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('storageAccountName'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts/', parameters('storageAccountName')), '2015-05-01-preview').key1)]"
          }
        },
        {
          "apiVersion": "2015-08-01",
          "name": "MSDeploy",
          "type": "extensions",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites/', parameters('webJobSiteName'))]"
          ],
          "properties": {
            "connectionString": "",
            "dbType": "None",
            "packageUri": "[concat(parameters('PackagesBaseURL'), '/ContosoMoments.WebJobs.v', parameters('DeploymentVersion') ,'.zip')]",
            "setParameters": { }
          }
        }
      ]
    }
  ],
  "outputs": {
  }
}
