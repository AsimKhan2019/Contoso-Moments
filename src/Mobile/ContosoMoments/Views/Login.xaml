<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContosoMoments.Views.Login">

  <Grid RowSpacing="0">
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <Grid Grid.Row="0" Padding="10,30,10,30" BackgroundColor="#8C0A4B">
      <Image VerticalOptions="End">
        <Image.Source>
          <OnPlatform x:TypeArguments="ImageSource" iOS="Assets/logotext.png" Android="logotext.png" WinPhone="Assets/logotext.png"/>
        </Image.Source>
      </Image>
    </Grid>

    <!--Settings-->
    <Grid Grid.Row="1" VerticalOptions="Start" HorizontalOptions="CenterAndExpand" Padding="10">
      <StackLayout Orientation="Vertical" Padding="10">
        <Button Text="Login with Facebook" Clicked="OnFBLoginClicked" />
        <Button Text="Login with Azure Active Directory" Clicked="OnAADLoginClicked" />
        <ContentView Padding="0,10,0,0">
          <Button Text="Guest access" Clicked="OnGuestClicked" />
        </ContentView>
      </StackLayout>
    </Grid>
  </Grid>
</ContentPage>